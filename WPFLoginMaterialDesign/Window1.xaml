        <StackPanel  Grid.Column="1" Grid.Row="1">
            <Grid Width="300" Margin="0, 20, 0, 0" 
                  FocusManager.FocusedElement="{Binding ElementName=UsernameBox}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
